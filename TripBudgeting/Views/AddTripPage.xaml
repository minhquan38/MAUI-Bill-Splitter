<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TripBudgeting.Views.AddTripPage"
             xmlns:vm="clr-namespace:TripBudgeting.ViewModels"
             Title="AddTripPage">
    <ContentPage.BindingContext>
        <vm:AddTripViewModel />
    </ContentPage.BindingContext>

    <StackLayout Padding="10">
        <Entry Placeholder="Destination" Text="{Binding Destination}" />
        <DatePicker Date="{Binding StartDate}" />
        <DatePicker Date="{Binding EndDate}" />
        <Entry Placeholder="Initial Budget" Text="{Binding InitialBudget}" Keyboard="Numeric" />

        <Button Text="Select Image" Command="{Binding SelectImageCommand}" />
        <Image Source="{Binding ImagePath}" HeightRequest="200" />

        <Button Text="Save" Command="{Binding SaveCommand}" />
    </StackLayout>
</ContentPage>